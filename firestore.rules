
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Profiles can be read/written by users who share the same familyId
    match /profiles/{familyId} {
      allow read, write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyId == familyId;

      // Sessions and skills can be managed by users in the same family
      match /{subcollection}/{docId} {
         allow read, write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyId == familyId;
      }
    }
    
    // Invites can be created by any authenticated user
    match /invites/{inviteId} {
      allow create: if request.auth.uid != null;
      allow read, write: if false; // Only backend functions can manage invites
    }
  }
}
