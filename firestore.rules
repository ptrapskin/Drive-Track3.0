
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile data.
    match /profiles/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      
      // Allow read/write access to subcollections if the user is the owner
      // OR if they are a guardian the profile has been shared with.
      match /{subcollection}/{docId} {
         allow read, write: if request.auth.uid == userId || 
                              exists(/databases/$(database)/documents/profiles/$(userId)/sharedWith/$(request.auth.token.email.replace('@', '%40')));
      }
    }
  }
}
