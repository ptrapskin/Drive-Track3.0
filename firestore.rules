
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to create, read and update their own profile
    // Also allow guardians to manage profiles for shared student accounts
    match /profiles/{userId} {
      allow read, update, create: if request.auth.uid == userId;
      // Allow all authenticated users to manage profiles (application validates permissions)
      allow read, write, create, update: if request.auth != null;
    }
    
    // Allow users to manage their own sessions
    // Also allow guardians to manage sessions for shared student accounts
    match /profiles/{userId}/sessions/{sessionId} {
      allow read, write, create, delete: if request.auth.uid == userId;
      // Allow all authenticated users to manage sessions (application validates permissions)
      allow read, write, create, delete: if request.auth != null;
    }
    
    // Allow users to list/query their own sessions collection
    // Also allow guardians to manage sessions for shared student accounts
    match /profiles/{userId}/sessions {
      allow read, list: if request.auth.uid == userId;
      // Allow all authenticated users to access sessions (application validates permissions)
      allow read, list, write, create, delete: if request.auth != null;
    }

    // Allow users to manage their own skills
    // Also allow guardians to manage skills for shared student accounts
    match /profiles/{userId}/skills/{skillId} {
      allow read, write: if request.auth.uid == userId;
      // Allow all authenticated users to manage skills (application validates permissions)
      allow read, write, create, delete: if request.auth != null;
    }

    // Rules for the shares collection
    match /shares/{shareId} {
        allow read, write, create, delete: if request.auth != null;
    }
  }
}
